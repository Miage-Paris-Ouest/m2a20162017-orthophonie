

{% extends "UPONDOrthophonieBundle::layout.html.twig" %}

{% block title %}
    Gestion des médecins
{% endblock %}

{% block orthophonie_body %}

    <div name="intitule">
        <h1>Gestion des médecins</h1>
    </div>

<div class="container">
    <div class="col-sm-12 col-md-6">
        <h3>Liste des patients</h3>
        <table class='table table-striped'>
            <th>Identifiant</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Email</th>
            <th>Login</th>
            <th>Action</th>
            {% for patient in listPatients %}
                <tr>
                    <td>
                        {{ patient.utilisateur.getId }}
                    </td>
                    <td>
                        {{ patient.utilisateur.getNom }}
                    </td>
                    <td>
                        {{ patient.utilisateur.getPrenom }}
                    </td>
                    <td>
                        {{ patient.utilisateur.getEmail }}
                    </td>
                    <td>
                        {{ patient.utilisateur.getUsername }}
                    </td>
                    <td>
                        <form method="post" action="{{ path('upond_orthophonie_administration_medecin_ajout') }}">
                            <input type="text" name='idUtilisateur' style="display:none" value="{{ patient.utilisateur.getId }}"/>
                            <input type="submit" class="btn btn-success" value="Ajouter"/>
                        </form>

                    </td>
                </tr>
            {% endfor %}
        </table>

    </div>
    <div class="col-sm-12 col-md-6">
        <h3>Liste des médecins</h3>

        <table class='table table-striped'>
            <th>ID</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Email</th>
            <th>Login</th>
            <th>Action</th>
            {% for medecin in listMedecins %}
                <tr>
                    <td>
                        {{ medecin.utilisateur.getId }}
                    </td>
                    <td>
                        {{ medecin.utilisateur.getNom }}
                    </td>
                    <td>
                        {{ medecin.utilisateur.getPrenom }}
                    </td>
                    <td>
                        {{ medecin.utilisateur.getEmail }}
                    </td>
                    <td>
                        {{ medecin.utilisateur.getUsername }}
                    </td>
                    <td>
                        <form method="post" action="{{ path('upond_orthophonie_administration_medecin_retirer') }}">
                            <input type="text" name='idUtilisateur' style="display:none" value="{{ medecin.utilisateur.getId }}"/>
                            <input type="submit" class="btn btn-danger" value="Retirer"/>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
</div>

{% endblock %}