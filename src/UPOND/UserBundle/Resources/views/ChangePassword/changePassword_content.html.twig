{% trans_default_domain 'FOSUserBundle' %}


<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST">

    <div class="form-group" id="fos_user_change_password">

        <div class="form-group">
            <label for="username">Mot de passe actuel</label>
            {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans, 'style':'width: 250px' } }) }}
            {{ form_errors(form.current_password) }}
        </div>

        <div class="form-group">
            <label for="username">Nouveau mot de passe</label>
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans, 'style':'width: 250px' } }) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>

        <div class="form-group">
            <label for="username">VÃ©rification</label>
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans, 'style':'width: 250px' } }) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>

        <div class="form-group">
            {{ form_rest(form) }}
        </div>
    </div>

    <div>
        <input class='btn btn-primary' type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
</form>
