

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
    <div class="form-group" id="fos_user_registration_form">
        <div class="form-group">
            <label for="mail">Adresse e-mail</label>
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans, 'style':'width: 250px'} }) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
        {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans, 'style':'width: 250px' } }) }}
        {{ form_errors(form.username) }}
        </div>

        <div class="form-group">
            <label for="username">Mot de passe</label>
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans, 'style':'width: 250px' } }) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>

        <div class="form-group">
            <label for="username">VÃ©rification</label>
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans, 'style':'width: 250px' } }) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>

        <div class="form-group">
        {{ form_rest(form) }}
        </div>
    </div>
    <div>
        <input class="btn btn-primary" type="submit" value="Enregistrer">
    </div>
</form>