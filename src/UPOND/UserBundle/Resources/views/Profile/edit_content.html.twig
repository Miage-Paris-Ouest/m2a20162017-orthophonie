        <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Votre nom d\'utilisateur', 'style':'width: 250px' } }) }}
            {{ form_errors(form.username) }}
        </div>

        <div class="form-group">
            <label for="username">Adresse E-mail</label>
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Votre adresse e-mail', 'style':'width: 250px' } }) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group">
